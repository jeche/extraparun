<% @prepage = "Added" %>
<% @page = "Run" %>
<% @highlight = "Run" %>

<section id="content">
    <div class="container_12">
	<div class="grid_12 top-1">
        <div class="block-1 box-shadow">
			<div class="run-spec-section"> 
				<h2 class="p3"><span class="color-1">About your</span> run:</h2>	
				<p>
					<strong>Name:</strong>
				    <%= @run.name %>
				</p>
				<p>
					<strong>Date:</strong>
				    <%= @run.date %>
				</p>				
				<p>
					<strong>Hr:</strong>
				    <%= @run.hr %>
				
					<strong>Min:</strong>
				  <%= @run.min %>
				
					<strong>Sec:</strong>
					<%= @run.sec %>
				</p>
				<p>
					<strong>Distance:</strong>
				    <%= @run.routes.first.distance %><span>mi.</span>
				</p>
				<p>
					<strong>Temperature:</strong>
					<% if @run.temp != "-1" %>
				    	<%= @run.temp %><span>F</span>
				    <% else %>
				    	<span>F</span>
				    <% end %>
				</p>
				<p>
					<strong>Humidity:</strong>
					<% if @run.humidity != "-1" %>
				    	<%= @run.humidity %><span>F</span>
				    <% else %>
				    	<span></span>
				    <% end %>
				</p>
				<%= link_to 'Back', runs_path %>
				<%= link_to 'Edit', edit_run_path(@run) %>
			</div>
		</div>
	</div>
	</div>
</section>	

