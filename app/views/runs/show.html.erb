<body>
<div class="main">
<div class="bg-img"></div>
  <!--==============================header=================================-->
<header>
	<h1><a href="#">Added<strong>Run:</strong></a></h1>
	<nav>
      <div class="social-icons"> <a href="#" class="icon-2"></a> <a href="#" class="icon-1"></a> </div>
      <ul class="menu">
        <li><a hreaf="/welcome">Home</a></li>
        <li><%=link_to 'My Runs', runs_path%></li>
        <li><a href="/goals">My Goals</a></li>
        <li><a href="myProfile.html">My Profile</a></li>
      </ul>
    </nav>
</header>
<!--==============================content================================-->
<section id="content">
    <div class="container_12">
	<div class="grid_12 top-1">
        <div class="block-1 box-shadow">
			<div class="run-spec-section"> 
				<strong><%= label_tag :'Here is the saved information about your new run'%>:</strong>	
				<p>
					<strong>Name:</strong>
				    <%= @run.name %>
				</p>
				<p>
					<strong>Date:</strong>
				    <%= @run.date %>
				</p>				
				<p>
					<strong>Hr:</strong>
				    <%= @run.hr %>
				
					<strong>Min:</strong>
				  <%= @run.min %>
				
					<strong>Sec:</strong>
					<%= @run.sec %>
				</p>
				<p>
					<strong>Distance:</strong>
				    <%= @run.dist %><span>mi.</span>
				</p>
				<p>
					<strong>Temperature:</strong>
				    <%= @run.temp %><span>F</span>
				</p>
				<p>
					<strong>Humidity:</strong>
				    <%= @run.humidity %><span>%</span>
				</p>
				<%= link_to 'Back', runs_path %>
				<%= link_to 'Edit', edit_run_path(@run) %>
			</div>
		</div>
	</div>
	</div>
</section>	
