<body>
<div class="main">
<div class="bg-img"></div>
  <!--==============================header=================================-->
<header>
<h1><a href="index.html">My<strong>Runs</strong></a></h1>
    <nav>
      <div class="social-icons"> <a href="#" class="icon-2"></a> <a href="#" class="icon-1"></a> </div>
      <ul class="menu">
        <li><a href="index.html">Home</a></li>
        <li class="current"><a href="">My Runs</a></li>
        <li><a href="/goals">My Goals</a></li>
        <li><a href="myProfile.html">My Profile</a></li>
      </ul>
    </nav>
</header>
<!--==============================content================================-->
  <section id="content">
    <div class="container_12">
	<div class="grid_12 top-1">
        <div class="block-1 box-shadow">
		<a href="runs/new" class="search_button">Add a run</a>
          <table>
			<thead>
				<th id="select-col-head"><strong>Select</strong></th>
				<th><strong>Date</strong></th>
				<th><strong>Name</strong></th>
				<th><strong>Time</strong></th>
				<th><strong>Distance</strong></th>
				<th><strong>Temperature</strong></th>
				<th><strong>Humidity</strong></th>
			</thead>
			<tbody>
			<% @runs.each do |run| %>
			<tr >
			  <td ><%= check_box("run", "validated")%></td>
			  <td ><%= run.date %></td>
			  <td><%= run.name %></td>
			  <td ><%= "#{run.hr} hr #{run.min} min #{run.sec} sec" %></td>
			  <td><%= "#{run.dist} mi."%></td>
			  <td ><%= "#{run.temp} F"%></td>
			  <td><%= "#{run.humidity}%" %></td>
			  <td><%= link_to 'Edit', edit_run_path(run) %></td>
			   <td><%= link_to 'Destroy', run_path(run),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
			<% end %>
			</tbody>
		  </table>		  
		  <a href="#" class="search_button">Edit Selected</a>
		  <a href="#" class="search_button">Remove Selected</a>
		  
        </div>
      </div>
	</div>
  </section>
